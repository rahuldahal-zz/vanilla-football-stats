<div id="teamInfoCard">
    <button id="collapse"><i class="fas fa-arrow-left"></i></button>
    <div id="coverPhoto"></div>
    <div id="logoWrapper"></div>
    <div id="clubName"></div>
    <div id="wrap">
        <div id="general">
            <h2>General Info.</h2>
            <div id="generalContent">
                <div id="info">
                    <div id="country"></div>
                    <div id="activeCompetitions">
                        <h4>Active Competitions</h4>
                    </div>
                    <div id="stadium">
                        <h4>Stadium</h4>
                        <p id="stadiumName"></p>
                    </div>
                    <div id="contact">
                        <h4>Contact</h4>
                        <address id="address"></address>
                        <a href="" id="email"></a>
                        <a href="" id="website" target="_blank"></a>
                    </div>
                </div>
                <div id="matches">
                    <div id="previousMatch">
                        <h5>Previous Match</h5>
                        <div class="score">
                            <div class="home">
                                <h3 id="previousHomeName">fetching...</h3>
                                <p id="previousHomeGoal"></p>
                            </div>
                            <div class="away">
                                <p id="previousAwayGoal"></p>
                                <h3 id="previousAwayName">fetching...</h3>
                            </div>
                        </div>
                    </div>
                    <div id="lastMatch">
                        <h5>Last Match</h5>
                        <div class="score">
                            <div class="home">
                                <h3 id="lastHomeName">fetching...</h3>
                                <p id="lastHomeGoal"></p>
                            </div>
                            <div class="away">
                                <p id="lastAwayGoal"></p>
                                <h3 id="lastAwayName">fetching...</h3>
                            </div>
                        </div>
                    </div>
                    <div id="nextMatch">
                        <h5>Next Match</h5>
                        <div class="score">
                            <div class="home">
                                <h3 id="nextHomeName">fetching...</h3>
                            </div>
                            <em style="margin: 1rem;">v/s</em>
                            <div class="away">
                                <h3 id="nextAwayName">fetching...</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="squad">
            <h2>Squad</h2>
            <div id="manager">
                <h3>Manager</h3>
            </div>
            <div id="playersWrapper">
                <div id="goalkeepers">
                    <h3>Goalkeepers</h3>
                    <div class="players"></div>
                </div>
                <div id="defenders">
                    <h3>Defenders</h3>
                    <div class="players"></div>
                </div>
                <div id="midfielders">
                    <h3>Midfielders</h3>
                    <div class="players"></div>
                </div>
                <div id="attackers">
                    <h3>Attackers</h3>
                    <div class="players"></div>
                </div>
            </div>
        </div>
    </div>
</div>